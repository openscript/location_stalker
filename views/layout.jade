doctype html
html(lang='en')
	head
		meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(http-equiv="Content-Language", content="en")
		meta(http-equiv="Content-Script-Type", content="text/javascript")
		meta(http-equiv="Content-Style-Type", content="text/css")

		title= i18n('appName')

		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		meta(name='robots', content='index, follow')
		meta(name='generator', content='Location Stalker')

		script(type='text/javascript', src='/scripts/modernizr.js')
		link(rel='shortcut icon', href='/favicon.ico')

		link(href='/styles/app.css', rel='stylesheet', type='text/css')

		block styles

	body
		nav(class='top-bar', data-topbar)
			ul.title-area
				li.name
					h1
						a(href='/')
							img(src='/images/offline.gif', alt='status', id='status')
							= i18n('appName')
			section.top-bar-section
				ul.right
					li.has-dropdown
						a(href='#')= i18n('settings')
						ul.dropdown
							li
								a(href='/setting/local')= i18n('local')
							li
								a(href='/setting/global')= i18n('global')
					li.has-dropdown
						a(href='#')= i18n('administration')
						ul.dropdown
							li
								a(href='/collection/manage')= i18n('collection')
							li
								a(href='/user/manage')= i18n('user')
		block body

		footer= i18n('footer')

		script(type='text/javascript', src='/scripts/jquery.js')
		script(type='text/javascript', src='/scripts/jquery.serializeJSON.js')
		script(type='text/javascript', src='/scripts/jquery-validation.js')
		script(type='text/javascript', src='/scripts/fastclick.js')
		script(type='text/javascript', src='/scripts/foundation.js')
		script(type='text/javascript', src='/scripts/socket.io.js')
		script(type='text/javascript', src='/scripts/sails.io.js')
		script(type='text/javascript', src='/scripts/app.js')

		block scripts